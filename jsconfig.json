{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@utils/*": [
                "./src/utils/*"
            ],
            "@contexts/*": [
                "./src/contexts/*"
            ],
            "@lodash/*": [
                "./node_modules/lodash/src/utils/*"
            ],
            "@ui/*": [
                "./src/ui/*"
            ],
            "@resources/*": [
                "./src/resources/*"
            ],
            "@adapters/*": [
                "./src/adapters/*"
            ],
        }
    },
    "exclude": [
        "node_modules"
    ]
}